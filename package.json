{
  "name": "statements-ai-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Bank Statements AI - Monorepo",
  "scripts": {
    "========== DEVELOPMENT ==========": "",
    "dev": "pnpm run dev:api & pnpm run dev:web",
    "dev:api": "./bin/dev-api.sh",
    "dev:web": "./bin/web-run.sh run dev",
    "start": "pnpm run db:start && pnpm run dev",
    "stop": "./bin/dev-stop.sh",

    "========== DATABASE ==========": "",
    "db:up": "docker-compose up db -d",
    "db:down": "docker-compose down",
    "db:start": "pnpm db:up && sleep 3 && pnpm db:migrate",
    "db:destroy": "docker-compose down -v",
    "db:migrate": "./bin/db-migrate.sh",
    "db:rollback": "./bin/db-rollback.sh",
    "db:backup": "./bin/db-backup.sh",
    "db:restore": "./bin/db-restore.sh",
    "db:sync:from-neon": "./bin/db-sync.sh neon-to-local",
    "db:sync:to-neon": "./bin/db-sync.sh local-to-neon",

    "========== TESTING ==========": "",
    "test:db:up": "docker-compose --profile test up test-db -d --wait",
    "test:db:down": "docker-compose stop test-db && docker-compose rm -f test-db",
    "test:db:migrate": "./bin/test-db-migrate.sh",
    "test": "pnpm run test:api && pnpm run test:web",
    "test:unit": "pnpm run test:api:unit && pnpm run test:web:unit",
    "test:api": "pnpm run test:api:unit && pnpm run test:api:integration",
    "test:api:unit": "./bin/api-run.sh pytest tests/unit tests/api tests/services -v",
    "test:api:unit:cov": "./bin/api-run.sh pytest tests/unit tests/api tests/services --cov",
    "test:api:integration": "./bin/test-integration.sh",
    "test:web": "pnpm run test:web:unit",
    "test:web:unit": "./bin/web-run.sh vitest run",
    "test:web:unit:watch": "./bin/web-run.sh run test",
    "test:web:unit:ui": "./bin/web-run.sh vitest --ui",
    "test:e2e": "./bin/test-e2e.sh",
    "test:e2e:ui": "./bin/test-e2e.sh --ui",
    "test:e2e:docker": "./bin/test-e2e-docker.sh",

    "========== LINTING & FORMATTING ==========": "",
    "lint": "pnpm run lint:api && pnpm run lint:web",
    "lint:fix": "pnpm run lint:api:fix && pnpm run lint:web:fix",
    "lint:api": "./bin/api-run.sh ruff check .",
    "lint:api:fix": "./bin/api-run.sh ruff check . --fix",
    "lint:web": "./bin/web-run.sh run lint",
    "lint:web:fix": "./bin/web-run.sh run lint:fix",
    "format": "pnpm run format:api && pnpm run format:web",
    "format:api": "./bin/format-api.sh",
    "format:web": "./bin/web-run.sh run format",
    "check": "pnpm run check:api && pnpm run check:web",
    "check:api": "./bin/check-api.sh",
    "check:web": "./bin/check-web.sh",
    "verify": "pnpm run verify:api && pnpm run verify:web",
    "verify:api": "pnpm run format:api && pnpm run lint:api && pnpm run test:api",
    "verify:web": "pnpm run format:web && pnpm run lint:web && pnpm run check:web && pnpm run test:web",

    "========== BUILD ==========": "",
    "build": "pnpm run build:web",
    "build:web": "./bin/web-run.sh run build",

    "========== DOCKER ==========": "",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",

    "========== INSTALL ==========": "",
    "install": "pnpm install:web && pnpm install:e2e && pnpm install:api",
    "install:web": "./bin/web-run.sh install",
    "install:e2e": "./bin/install-e2e.sh",
    "install:api": "./bin/install-api.sh",

    "========== DEPLOY ==========": "",
    "deploy:api:build": "./bin/deploy-api-build.sh",
    "deploy:api:start": "./bin/deploy-api-start.sh",
    "deploy:web:build": "./bin/deploy-web-build.sh",
    "deploy:setup": "pnpm deploy:setup:github && pnpm deploy:setup:render",
    "deploy:setup:github": "./bin/api-run.sh python ../bin/deploy-github-secrets.py",
    "deploy:setup:render": "./bin/api-run.sh python ../bin/deploy-render-env.py",

    "========== UTILITY ==========": "",
    "config:generate": "uvx --from pyyaml python bin/generate-env-files.py",
    "clean": "pnpm run clean:web && pnpm run clean:api",
    "clean:web": "./bin/clean-web.sh",
    "clean:api": "./bin/clean-api.sh",
    "reset": "pnpm run clean && pnpm run install",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
